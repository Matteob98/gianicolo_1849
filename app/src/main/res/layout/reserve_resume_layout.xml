<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarReserveGuideReserve"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimary"
        android:paddingEnd="16dp"
        android:paddingStart="6dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_close_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/resumeLayoutResume"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarReserveGuideReserve"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:id="@+id/guideAvatarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_resume"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_donna_4"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:id="@+id/guide_name_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giulia bianchi"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_phone_light"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3458823485"
                android:textIsSelectable="true"
                android:inputType="phone"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_email_light"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email.guida@gianicolo.it"
                android:textIsSelectable="true"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_gray"
            android:layout_margin="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_people_one_light"/>
            <TextView
                android:id="@+id/name_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matteo"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_phone_light"/>
            <TextView
                android:id="@+id/phone_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3934451239"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_email_light"/>
            <TextView
                android:id="@+id/email_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email.diprova@sapienza.it"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_calendar_light"/>

            <TextView
                android:id="@+id/data_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="25/12/2020" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_time_light"/>
            <TextView
                android:id="@+id/time_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00-14:00"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_people_light"/>

            <TextView
                android:id="@+id/people_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="5" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_money_light"/>
            <TextView
                android:id="@+id/price_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55 â‚¬"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButtonResume"
            android:backgroundTint="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="Cancella prenotazione" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>