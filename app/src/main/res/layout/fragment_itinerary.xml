                            android:layout_marginStart="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="La Breccia"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/black"
